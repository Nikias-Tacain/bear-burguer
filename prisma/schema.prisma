// prisma/schema.prisma

// 1. Configuración de la base de datos
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // <--- ¡Correcto!
}

// 2. Generador del Cliente de Prisma
generator client {
  provider = "prisma-client-js"
}

// 3. ¡El Modelo de Datos!
// Así se verá la tabla "Product" en la base de datos.
model Product {
  id          String   @id @default(cuid()) // Un ID único (ej: "clx...")
  name        String
  description String
  price       Float    // Usamos Float para precios como 13.50
  imageUrl    String
  
  createdAt   DateTime @default(now()) // Fecha de creación
  updatedAt   DateTime @updatedAt      // Fecha de última actualización
}
